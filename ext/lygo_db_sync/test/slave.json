{
  "uuid": "client_0001",
  "address": "127.0.0.1:10001",
  "database": {
    "driver": "arango",
    "endpoints": [
      "http://localhost:8529"
    ],
    "authentication": {
      "username": "root",
      "password": "xxxx"
    }
  },
  "sync": [
    {
      "uid": "update_some_collections",
      "local_dbname": "sync_slave",
      "remote_dbname": "sync_master",
      "interval_sec": 3,
      "actions": [
        {
          "local_collection": "coll_slave",
          "remote_collection": "coll_master",
          "command": {
            "filter": "",
            "select": "FOR doc IN @@collection FILTER (doc._db_sync_last==NULL) UPDATE doc WITH { \"_db_sync_last\":@timestamp } IN @@collection RETURN NEW",
            "select_params": {
              "@collection": "$collection",
              "timestamp": "$timestamp",
              "now": "$now"
            },
            "update": ""
          }
        }
      ]
    }
  ]
}